<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About</title>
    <link rel="stylesheet" href="/css/join.css" />
    <script src="/js/client/join.js" defer></script>
    <%- include("../includes/bootstrap.ejs") %>
  </head>
  <body>
    <%- include("../includes/navbar.ejs") %>
    <div class="alert alert-primary map-alert" role="alert">
      Just a map for your entertainment!
    </div>
    <div
      id="map-container-google-1"
      class="z-depth-1-half map-container"
      height="800"
    >
      <iframe
        src="https://maps.google.com/maps?q=<%= location %>&t=&z=13&ie=UTF8&iwloc=&output=embed"
        frameborder="0"
        style="border: 0"
        allowfullscreen
        width="100%"
        height="100%"
      ></iframe>
    </div>
    <div class="map-keys-wrapper">
      <form action="/join" method="POST">
        <input
          type="text"
          class="form-control contact-form__input map-input-field"
          name="searchedLocation"
          required
          placeholder="Enter a location"
        />
        <button type="submit" class="btn btn-danger search-location-btn">
          Search
        </button>
      </form>
      <button type="submit" class="btn btn-danger get-location-btn">
        Get My Coordinates
      </button>
      <div class="loading-spinner-wrapper">
        <div class="spinner-border text-danger location-loading" role="status">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <p class="latitude"></p>
      <p class="longitude"></p>
    </div>
    <%- include("../includes/footer.ejs") %>
  </body>
</html>
