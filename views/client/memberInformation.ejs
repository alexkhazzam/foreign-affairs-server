<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include("../includes/bootstrap.ejs") %>
    <script>
      function submitted() {
        const loadingSpinner = document.querySelector('.loading-spinner');
        loadingSpinner.style.display = 'inline-block !important';
      }
    </script>
  </head>
  <body>
    <%- include("../includes/navbar.ejs") %>
    <form onsubmit="submitted()" method="POST" action="/member-information">
      <div class="form-group">
        <input
          required
          class="form-control"
          id="exampleFormControlInput1"
          placeholder="Member Name"
          name="memberName"
        />
      </div>
      <button type="submit" class="btn btn-info">Search</button>
    </form>
    <div class="loading-spinner" style="display: none !important">
      <div class="spinner-border text-info" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <% if (members) { %> <% for (const memberInfo of members) { %>
    <h1><%= memberInfo.member%></h1>
    <% if (memberInfo.titles) { %> <% for (let i = 0; i <=
    memberInfo.titles.length - 1; i++) { %> <% console.log(memberInfo.titles[i])
    %> <% } %> <% } %> <% if (memberInfo.hobbies) { %> <% for (let i = 0; i <=
    memberInfo.hobbies.length - 1; i++) { %> <%
    console.log(memberInfo.hobbies[i]) %> <% } %> <% } %> <% if
    (memberInfo.achievements) { %> <% for (let i = 0; i <=
    memberInfo.achievements.length - 1; i++) { %> <%
    console.log(memberInfo.achievements[i]) %> <% } %> <% } %> <% if
    (memberInfo.about !== "") { %>
    <p><%= memberInfo.about %></p>
    <% } %> <% } %> <% } %>
  </body>
</html>
