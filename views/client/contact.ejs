<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/contact.css">
    <script src="/js/client/contact.js" defer></script> 
    <script src="/js/client/navbar.js" defer></script>
    <%- include("../includes/bootstrap.ejs") %>
  </head>
  <body>
      <%- include("../includes/navbar.ejs") %>
      <h3 class="contact-form__writeable-text"></h3>
      <main class="contact-form">
        <form action="/contact" method="POST">
          <div class="form-group contact-form__section">
            <label for="exampleInputPassword1" class="contact-form__label email-input" >Email Address</label>
            <input type="email" class="form-control contact-form__input" id="exampleInputPassword1" name="email" required/>
          </div>
          <div class="form-group contact-form__section"">
            <label for="exampleInputPassword1" class="contact-form__label">First Name</label>
            <input type="text" class="form-control contact-form__input" id="exampleInputPassword1" name="firstName" required/>
          </div>
          <div class="form-group contact-form__section"">
            <label for="exampleInputPassword1" class="contact-form__label">Last Name</label>
            <input type="text" class="form-control contact-form__input" id="exampleInputPassword1" name="lastName" required/>
          </div>
          <div class="form-group contact-form__section"">
            <label for="exampleFormControlTextarea1" class="contact-form__label">Message</label>
            <textarea
              class="form-control contact-form__input"
              id="exampleFormControlTextarea1"
              rows="3" name="message" required
            ></textarea>
          </div>
          <% if (emailMsg) { %>
            <div class="alert alert-info contact-form__email-sent" role="alert">
              Email was sent! You should hear back from us soon.
            </div>
            <% } else { %>
              <button type="btn" class="btn btn-info contact-form__submit">Submit</button>
              <% } %>
        </form>
      </main>
      <div id="map-container-google-2" class="z-depth-1-half map-container" style="height: 500px">
        <iframe src="https://maps.google.com/maps?q=greatneck&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
          style="border:0" allowfullscreen></iframe>
      </div>
      <a class="btn btn-primary btn-lg">Click me</a>

<!--Mask with wave-->
<div class="view overlay">
  <img src="https://mdbootstrap.com/img/Photos/Horizontal/Nature/6-col/img%20(54).jpg" class="img-fluid" alt="Sample image with waves effect.">
  <a href="#">
    <div class="mask waves-effect waves-light rgba-white-slight"></div>
  </a>
</div>
  </body>
</html>
